{
  "name": "swing-trading-screener",
  "version": "1.0.0",
  "description": "Automated stock screening microservice for swing trading in Indian markets",
  "main": "src/index.js",
  "scripts": {
    "test": "jest --verbose",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "start": "node src/index.js",
    "dev": "nodemon src/index.js"
  },
  "keywords": [
    "trading",
    "swing-trading",
    "stock-screening",
    "technical-analysis",
    "indian-stocks",
    "nse",
    "bse"
  ],
  "author": "Rajkamal Verma",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2"
  },
  "dependencies": {
    "node-cache": "^5.1.2",
    "yahoo-finance2": "^3.11.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  }
}
